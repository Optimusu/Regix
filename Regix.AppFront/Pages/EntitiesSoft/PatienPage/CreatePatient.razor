@page "/regpatient/create"
@attribute [Authorize(Roles = "Patient")]
@layout LoginLayout

@if (Patient is null)
{
    <Loading />
}
else
{
    <div class="container pt-4">
        <div class="card shadow-lg p-4 mb-5" style="border-radius: 12px;">
            <div class="card-header">
                <h2>Patient data</h2>
            </div>
            <div class="card-body">
                <FormPatient Patient="Patient"
                             OnSubmit="Create"
                             ReturnAction="Return"
                             ExitAction="ExitAction" />
            </div>

        </div>
    </div>

}