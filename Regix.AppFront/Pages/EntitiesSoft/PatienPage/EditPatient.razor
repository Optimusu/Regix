@page "/regpatient/edit/{Id:guid}"
@attribute [Authorize(Roles = "Administrator")]


@if (Patient is null || IsLoading)
{
    <Loading />
}
else
{
    <div class="container pt-4">
        <div class="card shadow-lg p-4 mb-5" style="border-radius: 12px;">
            <div class="card-header">
                <h2>Patient data</h2>
            </div>
            <div class="card-body">
                <FormPatient Patient="Patient"
                             OnSubmit="Edit"
                             ReturnAction="Return"
                             ExitAction="ExitAction" />
            </div>

        </div>
    </div>

}