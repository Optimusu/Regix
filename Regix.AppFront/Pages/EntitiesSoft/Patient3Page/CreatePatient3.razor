@page "/regpatient3s/create"
@attribute [Authorize(Roles = "Patient")]
@layout LoginLayout

@if (Patient3 is null)
{
    <Loading />
}
else
{
    <div class="container pt-4">
        <div class="card shadow-lg p-4 mb-5" style="border-radius: 12px;">
            <div class="card-header">
                <h2>Patient - @Title</h2>
            </div>
            <div class="card-body">
                <FormPatient3 Patient3="Patient3"
                             OnSubmit="Create"
                             ReturnAction="Return"/>
            </div>

        </div>
    </div>

}