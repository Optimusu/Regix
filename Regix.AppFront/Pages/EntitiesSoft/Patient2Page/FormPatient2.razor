<EditForm Model="Patient2" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />

    <h2>Current Medical Issue</h2>
    <hr />

    <div class="mb-2">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
                @GetDisplayName(() => Patient2.ConsultationReason)
            </span>
            <InputText class="form-control" placeholder="Prefer Name..." @bind-Value="Patient2.ConsultationReason" />
        </div>
        <ValidationMessage For="@(() => Patient2.ConsultationReason)" />
    </div>

    <div class="mb-2">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">Date</span>
            <input type="date" class="form-control"
                   @bind="Patient2.DateStart"
                   min="@DateMin?.ToString("yyyy-MM-dd")" />
        </div>
    </div>

    <div class="mb-2">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
                @GetDisplayName(() => Patient2.SymptomLocation)
            </span>
            <InputText class="form-control" placeholder="Prefer Name..." @bind-Value="Patient2.SymptomLocation" />
        </div>
        <ValidationMessage For="@(() => Patient2.SymptomLocation)" />
    </div>

    <div class="row mb-2">
        <!-- First Name -->
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text" style="width: 150px">
                    @GetDisplayName(() => Patient2.PainQuality)
                </span>
                <InputText class="form-control" placeholder="Prefer Name..." @bind-Value="Patient2.PainQuality" />
            </div>
            <ValidationMessage For="@(() => Patient2.PainQuality)" />
        </div>

        <!-- Last Name -->
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text" style="width: 150px">
                    @GetDisplayName(() => Patient2.PainSeverity)
                </span>
                <InputNumber class="form-control" placeholder="Prefer Name..." @bind-Value="Patient2.PainSeverity" />
            </div>
            <ValidationMessage For="@(() => Patient2.PainSeverity)" />
        </div>
    </div>

    <div class="mb-2">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
                @GetDisplayName(() => Patient2.DurationPattern)
            </span>
            <InputText class="form-control" placeholder="Prefer Name..." @bind-Value="Patient2.DurationPattern" />
