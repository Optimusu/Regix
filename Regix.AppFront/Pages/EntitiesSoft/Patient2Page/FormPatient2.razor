    <div class="mb-5">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
                @GetDisplayName(() => Patient2.PriorEpisodes)
            </span>
            <div class="d-flex align-items-center ps-3">
                <InputCheckbox @bind-Value="Patient2.PriorEpisodes" class="form-check-input me-2" />
            </div>
